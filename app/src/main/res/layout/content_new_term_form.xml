<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Forms.NewTermForm"
    tools:showIn="@layout/activity_new_term_form"
    >

    <Spinner
        android:id="@+id/startYearSp"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/startYear"
        app:layout_constraintTop_toBottomOf="@+id/startMonthSp" />

    <Spinner
        android:id="@+id/startMonthSp"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toEndOf="@+id/startMonthTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startMonthTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="104dp"
        android:text="@string/start_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/start_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startMonthTxt" />

    <TextView
        android:id="@+id/termTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/term_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startYear" />

    <EditText
        android:id="@+id/termTitleBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/term_1_term_2_etc"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/termTitleTxt"
        app:layout_constraintTop_toBottomOf="@+id/startYearSp" />


</androidx.constraintlayout.widget.ConstraintLayout>